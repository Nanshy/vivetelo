<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Inicio"
    android:background="@drawable/telobrillaa">

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/btnEsp"
        android:background="@drawable/mexico"
        android:onClick="clicEsp"
        android:layout_below="@+id/textView76"
        android:layout_alignLeft="@+id/textView76"
        android:layout_alignStart="@+id/textView76"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/btnEng"
        android:background="@drawable/usa"
        android:layout_alignTop="@+id/btnEsp"
        android:layout_alignRight="@+id/textView76"
        android:layout_alignEnd="@+id/textView76"
        android:onClick="clicEng" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Elija un idioma"
        android:id="@+id/textView76"
        android:layout_marginBottom="94dp"
        android:textColor="#ffffff"
        android:textSize="38dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose a languaje"
        android:id="@+id/textView77"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>
    

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/btnFran"
        android:background="@drawable/france"
        android:onClick="clicFran"
        android:layout_below="@+id/btnEsp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/textView77"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Choisissez une langue"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/textView77"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

