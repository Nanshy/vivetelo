<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nanchy.viveteloloapan.ayuda4"
    android:background="@drawable/f3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/textView9"
        android:textSize="50dp"
        android:textColor="#063367"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Como puedo comunicarme con el administrador?"
        android:id="@+id/ttayuda1"
        android:layout_below="@+id/txtAyuda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:textColor="#063367"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_below="@+id/ttayuda1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/ayuda1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_marginTop="330dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Para comunicarse con el administrador o director de cultura y turismo, puede hacerlo mediante el modulo contacto, haciendo clic en el boton de telefono, y automaticamente se harà la llamada al numero desde su telefono. Puede hacerlo tambien mediante el modulo servicios, iniciando sesion, una vez iniciada la sesion dar clic en el servicio de buzon, donde podra enviar mensaje al administrador, para este servicio requiere estar conectado al servicio de  internet"
                android:id="@+id/descripcionTelo"
                android:textStyle="normal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textColor="#063367"/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
